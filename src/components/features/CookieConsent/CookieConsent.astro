---
import "vanilla-cookieconsent/dist/cookieconsent.css";
---

<button type="button" data-cc="show-preferencesModal">Poka≈º zgody</button>

<script>
  import { run } from "vanilla-cookieconsent";
  import { config } from "./CookieConsentConfig";

  run(config);
</script>

<style is:global>
  #cc-main {
    --cc-font-family: var(--font-sans);
    --cc-bg: var(--color-background);
    --cc-primary-color: var(--color-primary);
    --cc-secondary-color: var(--color-muted-foreground);

    --cc-btn-primary-bg: var(--color-primary);
    --cc-btn-primary-color: var(--color-primary-foreground);
    --cc-btn-primary-border-color: var(--cc-btn-primary-bg);
    --cc-btn-primary-hover-bg: color-mix(
      in oklab,
      var(--color-primary),
      white 10%
    );
    --cc-btn-primary-hover-color: #ffffff;
    --cc-btn-primary-hover-border-color: var(--cc-btn-primary-hover-bg);

    --cc-btn-secondary-bg: var(--color-secondary);
    --cc-btn-secondary-color: var(--cc-primary-color);
    --cc-btn-secondary-border-color: var(--cc-btn-secondary-bg);
    --cc-btn-secondary-hover-bg: var(--color-bbrand-100);
    --cc-btn-secondary-hover-color: #000000;
    --cc-btn-secondary-hover-border-color: var(--color-bbrand-100);

    --cc-separator-border-color: var(--color-muted);

    --cc-toggle-on-bg: var(--cc-btn-primary-bg);
    --cc-toggle-off-bg: var(--color-muted-foreground);
    --cc-toggle-on-knob-bg: var(--color-accent);
    --cc-toggle-off-knob-bg: var(--cc-toggle-on-knob-bg);

    --cc-toggle-enabled-icon-color: var(--cc-bg);
    --cc-toggle-disabled-icon-color: var(--cc-bg);

    --cc-toggle-readonly-bg: var(--color-muted);
    --cc-toggle-readonly-knob-bg: #fff;
    --cc-toggle-readonly-knob-icon-color: var(--cc-toggle-readonly-bg);

    --cc-section-category-border: var(--cc-cookie-category-block-bg);

    --cc-cookie-category-block-bg: var(--cc-darker);
    --cc-cookie-category-block-border: var(--color-primary-foreground);
    --cc-cookie-category-block-hover-bg: var(--cc-darkerr);
    --cc-cookie-category-block-hover-border: var(--color-foreground);
    --cc-cookie-category-expanded-block-bg: transparent;
    --cc-cookie-category-expanded-block-hover-bg: color-mix(
      var(--color-foreground),
      transparent 80%
    );

    --cc-overlay-bg: rgba(0, 0, 0, 0.65);
    --cc-webkit-scrollbar-bg: var(--cc-section-category-border);
    --cc-webkit-scrollbar-hover-bg: var(--cc-btn-primary-hover-bg);

    --cc-footer-bg: var(--cc-btn-secondary-bg);
    --cc-footer-color: var(--cc-secondary-color);
    --cc-footer-border-color: var(--color-primary);
  }
</style>
